{
    "parserOptions": {
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },

    "settings": {
        "react": {
            "version": "detect"
        }
    },

    "plugins": ["prettier", "react", "react-hooks", "jsx-a11y"],

    "rules": {
        "react/jsx-no-bind": [
            "error",
            {
                "allowArrowFunctions": true,
                "allowBind": false,
                "ignoreRefs": true
            }
        ],
        "react/no-did-update-set-state": "error",
        "react/no-unknown-property": "error"
    }
}
